#panel-2.tabs-panel.is-active
  fieldset
    div style="display:flex; flex-direction: row;"
      legend URL Links
      .status-switch.button[id="2-yes-no-section" class=(@sd_meta_datum.section_flag_2 ? 'completed' : 'draft') data-sd_meta_datum_id="#{@sd_meta_datum.id}"]
        - if @sd_meta_datum.section_flag_2
          | Completed
        - else
          | Draft

    div data-row-span="2"
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :prospero_link, as: :string, label: 'Prospero', input_html: { value: f.object.prospero_link || @project.try(:prospero) || "", class: 'url-input' }
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :protocol_link, as: :string, label: 'Protocol', input_html: { class: 'url-input' }
    div data-row-span="2"
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :full_report_link, as: :string, label: 'Full Report', input_html: { class: 'url-input' }
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :structured_abstract_link, as: :string, label: 'Structured Abstract', input_html: { class: 'url-input' }
    div data-row-span="2"
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :key_messages_link, as: :string, label: 'Main Points or Key Messages', input_html: { class: 'url-input' }
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :abstract_summary_link, as: :string, label: 'Lay Abstract / Lay Language Summary', input_html: { class: 'url-input' }
    .sd-inner
      div data-row-span="1"
        .sd-item data-field-span="1"
          = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
            = f.input :evidence_summary_link, as: :string, label: 'Evidence Summary / Executive Summary', input_html: { class: 'url-input' }
    div data-row-span="2"
      div data-field-span="1"
        label Journal Articles
        .cocoon-container.journal-article-url-list
          = render 'sd_meta_data/form/nested_associations/journal_article_url_list', sd_meta_datum: @sd_meta_datum, url: @url
      div data-field-span="1"
        label Other Items
        .cocoon-container.other-item-list
          = render 'sd_meta_data/form/nested_associations/other_item_list', sd_meta_datum: @sd_meta_datum, url: @url

    div data-row-span="2"
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :disposition_of_comments_link, as: :string, label: 'Disposition of Comments', input_html: { class: 'url-input' }
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :srdr_data_link, as: :string, label: 'Downloadable Content', input_html: { class: 'url-input' }
    div data-row-span="2"
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :most_previous_version_srdr_link, as: :string, label: 'Most Recent Previous Version of SRDR+ Data', input_html: { class: 'url-input' }
      .sd-item data-field-span="1"
        = simple_form_for(@sd_meta_datum, url: @url, authenticity_token: true, remote: true, html: { class: "sd-form", data: { 'abide': '', 'live-validate': true } }) do |f|
          = f.input :most_previous_version_full_report_link, as: :string, label: 'Most Recent Previous Version of Full Report', input_html: { class: 'url-input' }
  /br/
  /br/
  /fieldset
    legend Section Review & Validation
    div data-row-span="1"
      div data-field-span="1"
        div Section Finished?
        .switch
          input.switch-input id="2-yes-no-section" type="checkbox" name="sectionSection" data-sd_meta_datum_id="#{@sd_meta_datum.id}"
          label.switch-paddle for="2-yes-no-section"
            span.switch-active aria-hidden="true" Yes
            span.switch-inactive aria-hidden="true" No
